@page "/store"
@using StateManagement.State
@inherits FluxorComponent

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
<MudText Class="mb-4">Current count: @CounterState?.Value.Count</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Increment</MudButton>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="DecrementCount">Decrement</MudButton>

@code {
    [Inject]
    private IState<CounterState>? CounterState { get; set; }

    [Inject]
    private IDispatcher? Dispatcher { get; set; } 

    private void IncrementCount()
    {
        Dispatcher?.Dispatch(new IncrementAction());
    }

    private void DecrementCount()
    {
        Dispatcher?.Dispatch(new DecrementAction());
    }
}
